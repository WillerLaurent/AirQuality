<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fontStyle" parent="TextAppearance.AppCompat">
        <item name="android:background">#91ccd8</item>
    </style>

    <style name="tvStyle" parent="TextAppearance.AppCompat">
        <item name="android:background">#efeded</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="toucheStyle" parent="TextAppearance.AppCompat">
    <item name="android:background">@drawable/button_pressed</item>
    </style>
</resources>
